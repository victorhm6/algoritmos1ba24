programa {
  funcao inicio() {
    //Declaração
    inteiro n1, n2
    real a, s, m, d

    //Entrada
    escreva("Digite o primeiro número:")
    leia(n1)
    escreva("Digite o segundo número:")
    leia(n2)

    //Processamento
    a = n1+n2
    s= n1-n2 
    m= n1*n2
    d= n1/n2 

    //Saida
    escreva ("A adição é", a)
    escreva ("A subtração é", s)
    escreva ("A multiplicação é", m)
    escreva ("A divisão é", d)


  }
}
